<Window x:Class="Dropbox_MeteredConnectionHandler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dropbox_MeteredConnectionHandler"
        mc:Ignorable="d"
        Title="Dropbox Metered Connection Manager"
        Height="450"
        Width="480">
    <Grid Margin="15">
        <GroupBox Header="Close Dropbox Manually">
            <StackPanel>
                <Button Content="Close Dropbox"
                        Margin="5"
                        Width="250"
                        HorizontalAlignment="Left"
                        Click="btn_click_closeDropbox"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
